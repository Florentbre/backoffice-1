{% extends 'base.html.twig' %}
{% block body %}
<div class="card" style="max-width:420px;margin:3rem auto;">
<h1>Connexion</h1>
{% if error %}<p>{{ error.messageKey|trans(error.messageData, 'security') }}</p>{% endif %}
<form method="post">
  <label>Login</label><input type="text" name="_username" value="{{ last_username }}" required>
  <label>Mot de passe</label><input type="password" name="_password" required>
  <button class="btn" type="submit">Se connecter</button>
</form>
</div>
{% endblock %}
